<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Swing Pay Test Regression PW Suite" verbose="4" thread-count="2" parallel="tests">
	
	<listeners>
		<listener
			class-name="com.qa.swingpay.listeners.ExtentReportListener" />

	</listeners>
  
  <test  name="Swing Pay Login Page Test_chrome">
	<parameter name= "browser" value="chrome"/>
    <classes>
      <class name="com.qa.swingpay.tests.LoginPageTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test  name="Swing Pay Dashboard Page Test_firefox">
	<parameter name= "browser" value="firefox"/>
    <classes>
      <class name="com.qa.swingpay.tests.DashboardPageTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test  name="Swing Pay Forgot Password Page Test_chromium">
	<parameter name= "browser" value="chromium"/>
    <classes>
      <class name="com.qa.swingpay.tests.ForgotPasswordPageTest"/>
    </classes>
  </test> <!-- Test -->

</suite> <!-- Suite -->